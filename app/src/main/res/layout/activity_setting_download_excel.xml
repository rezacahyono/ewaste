<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_tanggal_start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/et_tanggalStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:focusable="false"
            android:hint="Tanggal Mulai"
            android:maxLength="13" />
    </LinearLayout>

    <TextView
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sampai Dengan Tanggal"/>

    <LinearLayout
        android:id="@+id/layout_tanggal_end"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/et_tanggalEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:focusable="false"
            android:hint="Tanggal Akhir"
            android:maxLength="13" />
    </LinearLayout>

    <Button
        android:layout_marginVertical="10dp"
        android:id="@+id/downloadNow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Download"/>

</LinearLayout>