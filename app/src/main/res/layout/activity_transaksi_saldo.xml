<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.component.TransactionSaldoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wave" />

    </FrameLayout>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/filter_and_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:hint="Cari Berdasarkan ID"
                android:inputType="text"
                android:imeOptions="actionSearch"/>

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_margin="7.5dp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:src="@drawable/ic_baseline_filter_list_24"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/filterTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/layout_search_cancel_filter"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_tanggal_start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/calendar"/>
                    <EditText
                        android:id="@+id/et_tanggalStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:focusable="false"
                        android:hint="Tanggal Mulai"
                        android:maxLength="13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_tanggal_end"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/calendar"/>
                    <EditText
                        android:id="@+id/et_tanggalEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:focusable="false"
                        android:hint="Tanggal Akhir"
                        android:maxLength="13" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search_cancel_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_margin="7.5dp">
                <ImageButton
                    android:id="@+id/searchFilter"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/ic_baseline_search_24"/>

                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/cancelFilter"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/close"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/filter_and_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_transaksi_saldo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_item_transaksi_saldo"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDownloadExclLaporanSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/download" />
</RelativeLayout>